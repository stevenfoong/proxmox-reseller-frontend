# Environment variables for local development
# Copy this file to .env and fill in your values.
# Never commit .env to version control.

# ── Database ──────────────────────────────────────────────────────────────────
DB_PASSWORD=changeme_local

# ── Keycloak ──────────────────────────────────────────────────────────────────
KEYCLOAK_ADMIN_PASSWORD=changeme_local
OIDC_ISSUER=http://localhost:8080/realms/cloud

# ── Proxmox ───────────────────────────────────────────────────────────────────
PROXMOX_HOST=https://your-proxmox-host:8006
PROXMOX_TOKEN_ID=root@pam!api-token
PROXMOX_TOKEN_SECRET=your-token-secret-here

# ── SMTP (optional – leave blank to disable email) ────────────────────────────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ── Frontend (Vite) ───────────────────────────────────────────────────────────
# apps/admin/.env
# VITE_OIDC_AUTHORITY=http://localhost:8080/realms/cloud
# VITE_OIDC_CLIENT_ID=proxmox-admin
# VITE_OIDC_REDIRECT_URI=http://localhost:3001/auth/callback
# VITE_API_BASE_URL=http://localhost:8000/v1

# apps/user/.env
# VITE_OIDC_AUTHORITY=http://localhost:8080/realms/cloud
# VITE_OIDC_CLIENT_ID=proxmox-user
# VITE_OIDC_REDIRECT_URI=http://localhost:3000/auth/callback
# VITE_API_BASE_URL=http://localhost:8000/v1
